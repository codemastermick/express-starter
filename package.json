{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.bundle.js",
  "sideEffects": false,
  "scripts": {
    "purge-dist": "rimraf dist",
    "purge-logs": "rimraf logs",
    "purge-tests": "rimraf coverage",
    "clean": "run-p \"purge-dist\" \"purge-logs\" \"purge-tests\"",
    "build": "cross-env NODE_ENV=development webpack --config configs/webpack.config.js --no-watch",
    "build:watch": "cross-env NODE_ENV=development webpack --config configs/webpack.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --config configs/webpack.config.js",
    "dev": "run-s \"clean\" \"build\" && concurrently --kill-others \"nodemon --watch src -e ts,js --exec node --unhandled-rejections=strict ./dist/index.bundle.js\" \"npm run build:watch\"",
    "dev:debug": "cross-env DEBUG=* npm run dev",
    "start": "npm run clean && npm run build:prod && node --unhandled-rejections=strict ./dist/index.bundle.js",
    "start:debug": "cross-env DEBUG=* npm start",
    "test": "mocha --config configs/.mocharc.json -r ts-node/register '**/*.test.ts' --unhandled-rejections=strict",
    "test:coverage": "./node_modules/c8/bin/c8.js -c configs/.c8rc npm test",
    "test:debug": "cross-env DEBUG=* npm test",
    "test:watch": "npm test -- --watch",
    "codacy": "cat ./coverage/lcov.info | codacy-coverage && rimraf ./coverage",
    "lint": "eslint"
  },
  "keywords": [],
  "author": "Codemaster Mick",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.28.3",
    "cors": "^2.8.5",
    "debug": "^4.3.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.2",
    "express-rate-limit": "^6.2.0",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.13.14",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "c8": "^7.11.0",
    "chai": "^4.3.4",
    "codacy-coverage": "^3.4.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "mocha": "^9.1.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
